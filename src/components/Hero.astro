<section class="hero">
  <div class="hero-bg">
    <img src="/hero.png" alt="Hugo Buendia" class="hero-img" />
    <div class="overlay"></div>
  </div>
  
  <div class="hero-content">
    <h1 class="title">
      <span class="line-1 fade-in" style="animation-delay: 0.2s;">HUGO</span>
      <span class="line-2 fade-in" style="animation-delay: 0.5s;">BUENDIA</span>
    </h1>
    <p class="subtitle fade-in" style="animation-delay: 0.8s;">
      Sonidos fr√°giles en la oscuridad.
    </p>
    <a href="#musica" class="listen-btn fade-in" style="animation-delay: 1s;">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="play-icon"><polygon points="6 3 20 12 6 21 6 3"></polygon></svg>
      <span>Escuchar Ahora</span>
    </a>
  </div>
  
  <div class="scroll-indicator fade-in" style="animation-delay: 1.2s;">
    <span>Descubrir</span>
    <div class="line"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    height: 100vh;
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 20%; /* Adjust based on the image */
    filter: grayscale(100%) contrast(1.2) brightness(0.6);
    transform: scale(1.05);
    animation: slowZoom 20s ease-out infinite alternate;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(10, 10, 10, 0.2) 0%, rgba(10, 10, 10, 0.9) 100%);
  }

  .hero-content {
    text-align: center;
    z-index: 1;
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .title {
    display: flex;
    flex-direction: column;
    font-size: clamp(4rem, 15vw, 12rem);
    line-height: 0.85;
    margin-bottom: 2rem;
    color: var(--color-text);
    text-shadow: 4px 4px 0px rgba(0,0,0,0.5);
  }

  .line-1 {
    align-self: flex-start;
    margin-left: -5vw;
    margin-bottom: 0.2em; /* Added vertical separation */
  }

  .line-2 {
    align-self: flex-end;
    margin-right: -5vw;
    color: var(--color-accent);
  }

  .subtitle {
    font-family: var(--font-body);
    font-size: clamp(1.2rem, 3vw, 2rem);
    font-style: italic;
    letter-spacing: 0.05em;
    max-width: 600px;
    opacity: 0.8;
    margin-bottom: 3rem;
  }

  .listen-btn {
    display: flex;
    align-items: center;
    gap: 1rem;
    border: 1px solid rgba(255, 237, 0, 0.5); /* Using the new yellow accent */
    padding: 1rem 2.5rem;
    border-radius: 50px;
    font-family: var(--font-display);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: transparent;
    color: var(--color-text);
  }

  .listen-btn:hover {
    background-color: var(--color-accent);
    color: var(--color-bg);
    border-color: var(--color-accent);
  }

  .play-icon {
    width: 20px;
    height: 20px;
    transition: fill 0.3s ease;
  }

  .listen-btn:hover .play-icon {
    fill: var(--color-bg);
    stroke: var(--color-bg);
  }

  .scroll-indicator {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    font-family: var(--font-display);
    font-size: 0.9rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }

  .scroll-indicator .line {
    width: 1px;
    height: 60px;
    background-color: var(--color-accent);
    animation: scrollLine 2s cubic-bezier(0.77, 0, 0.175, 1) infinite;
    transform-origin: top;
  }

  @keyframes slowZoom {
    from { transform: scale(1); }
    to { transform: scale(1.1); }
  }

  @keyframes scrollLine {
    0% { transform: scaleY(0); opacity: 0; }
    50% { transform: scaleY(1); opacity: 1; }
    100% { transform: scaleY(0); opacity: 0; transform-origin: bottom; }
  }

  @media (max-width: 768px) {
    .line-1 { margin-left: 0; }
    .line-2 { margin-right: 0; }
  }
</style>
