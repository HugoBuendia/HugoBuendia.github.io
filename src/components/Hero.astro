<style>
  .hero {
    position: relative;
    height: 100vh;
    height: 100svh;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: var(--color-bg);
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 45%; /* Adjusted to show the face/eyes properly */
    filter: grayscale(100%) contrast(1.1) brightness(0.7);
    transform: scale(1.03);
    animation: slowZoom 18s ease-in-out infinite;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom, 
      rgba(10, 10, 10, 0.4) 0%, 
      rgba(10, 10, 10, 0.2) 40%,
      rgba(10, 10, 10, 0.9) 100%
    );
  }

  .vignette {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-shadow: inset 0 0 150px rgba(0,0,0,0.9);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0 5vw;
  }

  .hero-social {
    position: absolute;
    top: 2.2rem;
    right: 1.8rem;
    left: auto;
    display: flex;
    align-items: center;
    gap: 0.9rem;
    z-index: 3;
  }

  .hero-social a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text);
    background-color: transparent;
    border: none;
    transition: color 0.3s ease;
  }

  .hero-social a:hover {
    color: var(--color-accent);
    background-color: transparent;
  }

  .title-container {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: -5vh;
  }

  .title {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
    font-size: clamp(4.5rem, 16vw, 14rem);
    line-height: 0.85;
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: -0.02em;
    width: min(85%, 1400px);
    margin: 0 auto;
  }

  .line-1 {
    color: var(--color-accent);
    text-shadow: 0 10px 30px rgba(0,0,0,0.5);
  }

  .line-2 {
    color: var(--color-accent);
  }

  .subtitle-wrapper {
    position: relative;
    margin-top: 0.5rem;
    width: 100%;
    text-align: center;
    z-index: 2;
  }

  .subtitle {
    font-family: var(--font-script);
    font-size: clamp(3rem, 10vw, 8rem);
    font-style: italic;
    font-weight: 300;
    color: var(--color-text);
    text-transform: lowercase;
    letter-spacing: 0.02em;
    text-shadow: 0 4px 20px rgba(0,0,0,0.8);
  }

  .hero-bottom {
    position: absolute;
    bottom: 4rem;
    left: 0;
    width: 100%;
    padding: 0 5vw;
    display: flex;
    justify-content: center;
    align-items: flex-end;
  }

  @media (min-width: 769px) {
    .hero-bottom {
      bottom: 2rem;
    }
  }

  .listen-btn {
    position: relative;
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 2rem;
    font-family: var(--font-display);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 1rem;
    color: var(--color-text);
    background-color: var(--color-bg);
    border: 1px solid var(--color-text);
    overflow: hidden;
    border-radius: 2px;
    transition: background-color 0.4s ease, color 0.4s ease;
  }

  .btn-bg {
    display: none;
  }

  .listen-btn:hover {
    background-color: var(--color-text);
    color: var(--color-bg);
  }

  .listen-btn::before {
    content: none;
  }

  .btn-text, .btn-icon {
    transition: color 0.4s ease;
    color: inherit;
  }

  .listen-btn:hover .btn-text,
  .listen-btn:hover .btn-icon {
    color: inherit;
  }

  .btn-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @keyframes slowZoom {
    0% { transform: scale(1.03); }
    50% { transform: scale(1.08); }
    100% { transform: scale(1.03); }
  }

  @media (max-width: 768px) {
    .hero {
      height: 100svh;
    }

    .hero-content {
      gap: 1.5rem;
    }

    .hero-social {
      top: 1.3rem;
      right: 0.8rem;
      left: auto;
      gap: 0.5rem;
    }

    .hero-social a {
      width: auto;
      height: auto;
    }

    .hero-img {
      object-position: 45% 35%;
    }

    .title {
      flex-direction: column;
      align-items: center;
      gap: 0.2rem;
      font-size: clamp(4rem, 16vw, 8rem);
      width: 90%;
    }

    .subtitle-wrapper {
      margin-top: 0.25rem;
    }
    
    .subtitle {
      font-size: clamp(2.5rem, 12vw, 5rem);
    }
    
    .hero-bottom {
      position: static;
      bottom: auto;
      padding: 0;
    }
  }
</style>
