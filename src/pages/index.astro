.newsletter-title {
font-size: clamp(1.1rem, 3vw, 1.6rem);
letter-spacing: 0.08em;
margin-bottom: 0.3rem;
}

.newsletter-copy {
font-size: clamp(1rem, 2vw, 1.2rem);
opacity: 0.8;
margin-bottom: 1rem;
}

.newsletter-form {
display: flex;
flex-wrap: wrap;
gap: 0.75rem;
justify-content: center;
}

.newsletter-form input {
