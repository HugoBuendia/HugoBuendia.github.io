<style>
.section-title {
font-size: clamp(3rem, 8vw, 6rem);
color: var(--color-text);
margin-bottom: 4rem;
opacity: 0.9;
position: relative;
display: inline-block;
line-height: 1;
padding-bottom: 0.9rem;
}

.section-title::after {
content: '';
position: absolute;
left: 0;
bottom: 0;
width: 100%;
height: 5px;
background: var(--color-accent);
}

.text-accent {
color: var(--color-accent);
}

/* Bio Section */
.bio-container {
display: grid;
grid-template-columns: 1fr 1fr;
gap: 6rem;
align-items: center;
}

.bio-section .section-title {
font-size: clamp(2.2rem, 5.5vw, 4rem);
margin-bottom: 2rem;
}

.bio-text p {
font-size: clamp(1.2rem, 2vw, 1.8rem);
margin-bottom: 2rem;
color: rgba(232, 227, 223, 0.8);
max-width: 600px;
}

.bio-image {
position: relative;
max-width: 420px;
width: 100%;
margin: 0 auto;
cursor: pointer;
}

.bio-image::before {
content: '';
position: absolute;
top: -20px;
left: -20px;
width: 100%;
height: 100%;
border: 1px solid var(--color-accent);
z-index: -1;
}

.bio-image img {
width: 100%;
height: auto;
filter: grayscale(100%) contrast(1.04) brightness(0.96);
transition: filter 1.2s cubic-bezier(0.22, 1, 0.36, 1);
}

.bio-image:hover img,
.bio-image:focus img,
.bio-image:active img,
.bio-image.is-color img {
filter: grayscale(0%) saturate(1.08) contrast(1.03) brightness(0.99);
}

/* Music Section */
.track-list {
display: flex;
flex-direction: column;
gap: 2rem;
}

.track-item {
display: flex;
flex-direction: column;
align-items: center;
gap: 2rem;
padding: 1.5rem;
background-color: rgba(17, 17, 17, 0.5);
border: 1px solid rgba(255, 255, 255, 0.05);
transition: all 0.3s ease;
}

@media (min-width: 768px) {
.track-item {
flex-direction: row;
}
}

.track-cover {
width: 100%;
max-width: 200px;
aspect-ratio: 1 / 1;
overflow: hidden;
flex-shrink: 0;
}

.track-cover img {
width: 100%;
height: 100%;
object-fit: cover;
filter: grayscale(0%);
transition: filter 0.5s ease;
}

.track-info {
flex: 1;
display: flex;
flex-direction: column;
text-align: center;
}

@media (min-width: 768px) {
.track-info {
text-align: left;
}
}

.track-title {
font-family: var(--font-display);
font-size: clamp(2rem, 4vw, 3rem);
margin: 0 0 0.5rem 0;
text-transform: uppercase;
color: var(--color-text);
}

.track-year {
font-family: var(--font-display);
font-size: 1rem;
color: var(--color-text);
letter-spacing: 0.1em;
}

.track-play {
width: 60px;
height: 60px;
border-radius: 50%;
border: 2px solid rgba(255, 255, 255, 0.2);
display: flex;
align-items: center;
justify-content: center;
flex-shrink: 0;
transition: all 0.3s ease;
}

.track-play .play-icon {
width: 24px;
height: 24px;
margin-left: 4px;
transition: fill 0.3s ease;
}

.track-item:hover {
background-color: rgba(26, 26, 26, 0.8);
border-color: rgba(255, 237, 0, 0.5);
}

.track-item:hover .track-cover img {
filter: grayscale(0%);
}

.track-item:hover .track-play {
background-color: var(--color-text);
border-color: var(--color-text);
color: var(--color-bg);
}

.track-item:hover .track-play .play-icon {
fill: var(--color-bg);
stroke: var(--color-bg);
}

.listen-popup {
position: fixed;
inset: 0;
z-index: 1000;
display: grid;
place-items: center;
padding: 1rem;
}

.listen-popup[hidden] {
display: none;
}

.listen-popup-backdrop {
position: absolute;
inset: 0;
background: rgba(0, 0, 0, 0.7);
}

.listen-popup-dialog {
position: relative;
z-index: 1;
width: 100%;
max-width: 480px;
padding: 2rem 1.5rem 1.5rem;
background: var(--color-bg);
border: 1px solid rgba(255, 255, 255, 0.2);
overflow: hidden;
}

.listen-popup-dialog::before {
content: '';
position: absolute;
inset: 0;
background-image: url('/gallery/Vagabundo.webp');
background-size: cover;
background-position: center 35%;
filter: grayscale(100%) brightness(0.35);
z-index: -2;
}

.listen-popup-dialog::after {
content: '';
position: absolute;
inset: 0;
background: linear-gradient(to bottom, rgba(10, 10, 10, 0.65), rgba(10, 10, 10, 0.88));
z-index: -1;
}

.listen-popup-close {
position: absolute;
top: 0.5rem;
right: 0.75rem;
font-size: 2rem;
line-height: 1;
background: transparent;
border: 0;
color: var(--color-text);
cursor: pointer;
}

.listen-popup-title {
font-family: var(--font-display);
font-size: clamp(1.4rem, 4vw, 2rem);
margin: 0 0 1rem;
text-transform: uppercase;
letter-spacing: 0.06em;
}

.listen-popup-links {
display: flex;
flex-direction: column;
gap: 0.75rem;
}

.listen-popup-links a {
display: flex;
align-items: center;
gap: 0.75rem;
padding: 0.8rem 1rem;
border: 1px solid rgba(255, 255, 255, 0.18);
text-transform: uppercase;
letter-spacing: 0.06em;
font-family: var(--font-display);
transition: border-color 0.3s ease, color 0.3s ease;
}

.listen-popup-links a svg {
width: 20px;
height: 20px;
flex-shrink: 0;
}

.listen-popup-links a:hover {
border-color: var(--color-accent);
color: var(--color-accent);
}

/* Video Section */
.video-wrapper {
position: relative;
width: 100%;
max-width: 1100px;
margin: 0 auto;
aspect-ratio: 16 / 9;
border: 1px solid rgba(255, 255, 255, 0.12);
